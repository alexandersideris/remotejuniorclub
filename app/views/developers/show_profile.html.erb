<div style="height:1000px; text-align: center; margin-top: 50px;">

<div style="">
	<img id="card-img-top" src="<%= @developer.profile_image.url %>" style="border-radius: 50%; height:150px; margin:30px;" />

	<h1 style="margin: 30px;"><%= @developer.name %></h1>
	<p style="margin: 30px;"><%= @developer.bio %></p>
	<a target="_blank" style="margin: 30px;" href="<%= @developer.personal_website %>">Personal website/blog.</a><br><br>
</div>
<hr>
<h1><%= @developer.name.strip.split(" ")[0] %>'s Side Projects</h1>
<hr>

	<% @side_projects.each do |sp| %>
	<div class="col col-lg-12" style="background-image: linear-gradient(to top, #a8edea 10%, #fed6e3 120%); text-align: center; margin-left: auto; margin-right: auto; display: block; align-self: center;">
		<a style="color:black; text-decoration: none;" href="/side_projects/<%= sp.id %>" ><img id="card-img-top" src="<%= sp.image.url %>" style="border-radius: 50%; height:50px; margin:20px;" /><b><%= sp.name %> </b>- <%= sp.description %></a>
		
	</div>
	<% end %>

</div>